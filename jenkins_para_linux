pipeline {
 agent {
     node {
         label 'master'
     }
 }

 environment {

     db_name = 'prod'
 }
 
 tools {

     maven 'localmaven'
     jdk 'JAVA_HOME'
 }
stages {
    stage ('checkout code from SCM'){
     steps{   

         git branch: 'master', url: 'https://github.com/onyriv/Lesson-04.git'

      }
    }

    stage ('User goal'){
        steps{
            sh """
            mvn ${ goal }
            echo "this is database name ${ db_name}"
            """
        }

    }

}
}
